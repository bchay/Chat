doctype html
html
  head
    meta(charset = "UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href = "/stylesheets/main.css")
    link(rel="stylesheet" href = "/stylesheets/alertify.css")
    
    script(src = "https://cdn.socket.io/socket.io-1.3.5.js" defer)
    script(src = "https://code.jquery.com/jquery-2.1.1.min.js" defer)
    script(src = "/javascripts/main.js" defer)
    script(src = "/javascripts/alertify.js/dist/js/alertify.js" defer)
    include favicons.pug
    
    title Chat
    script.
      username = "#{username}";
  body
    include header.pug
    div#menu
      div#friendsList.heading Friends List
      div#friends
        if friendList
          ul#friendUL
            for index in friendList
              li.friend #{index}
      button#chat(disabled) Chat
      | 
      button#add Add friend
      | 
      button#remove Remvove friend
      div#error
      
    div#messages
      div.tabs
        ul.tab-links
        div.tab-content
      form#sendMessage(action = "")
        input#m(type = "text", maxlength = 2000, tabindex = 1, disabled)
        button#chatButton(type = "submit" tabindex = 2) Send